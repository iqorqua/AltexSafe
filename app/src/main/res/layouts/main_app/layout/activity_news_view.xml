<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg"
    tools:context="com.app.altex.altexsafe.thirdpatryactivity.NewsView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/news_image_preview"
                android:layout_width="match_parent"
                android:layout_height="600px" />

            <TextView
                android:id="@+id/news_txt_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:text="TextView"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/news_txt_goodprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20px"
                    android:text="TextView"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    fancy:mfb_borderColor="#FFFFFF"
                    fancy:mfb_borderWidth="1dp"
                    fancy:mfb_defaultColor="@android:color/holo_blue_dark"
                    fancy:mfb_focusColor="@android:color/holo_blue_light"
                    fancy:mfb_iconFont="fontawesome.ttf"
                    fancy:mfb_iconPosition="left"
                    fancy:mfb_radius="30dp"
                    fancy:mfb_text="Set pickup location"
                    fancy:mfb_textColor="#FFFFFF" />

            </LinearLayout>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:focusedByDefault="false"
                android:text="text"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
